{
    "extends": [
        "@annangela/eslint-config/tsconfig.base.json",
        // "./node_modules/@annangela/eslint-config/tsconfig.json"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "module": "Node16", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "moduleResolution": "Node16", // Node 20 - https://github.com/tsconfig/bases#centralized-recommendations-for-tsconfig-bases
        "declaration": false,
        "declarationMap": false,
    },
    "include": [
        "src",
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
}
